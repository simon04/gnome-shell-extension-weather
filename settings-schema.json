{
  "woeidLookup":
  { "type": "button"
  , "description": "Get WOEID"
  , "callback": "woeidLookup"
  , "tooltip": "http://edg3.co.uk/snippets/weather-location-codes/"
  }
, "woeid":
  { "type": "entry"
  , "default": ""
  , "description": "WOEID"
  , "tooltip": "Where On Earth ID"
  }
, "temperatureUnit":
  { "type": "radiogroup"
  , "default": "celsius"
  , "description": "Temperature unit"
  , "options":
    { "celsius": "celsius"
    , "fahrenheit": "fahrenheit"
    }
  }
, "windSpeedUnit":
  { "type": "radiogroup"
  , "default": "kph"
  , "description": "Wind speed unit"
  , "options":
    { "kph": "kph"
    , "mph": "mph"
    , "m/s": "m/s"
    , "knots": "knots"
    }
  }
, "pressureUnit":
  { "type": "radiogroup"
  , "default": "mbar"
  , "description": "Athmospheric pressure unit"
  , "options":
    { "mbar": "mbar"
    , "in Hg": "in Hg"
    , "mm Hg": "mm Hg"
    , "psi": "psi"
    , "at": "at"
    , "atm": "atm"
    , "Pa": "Pa"
    }
  }
, "showSunrise":
  { "type": "checkbox"
  , "default": true
  , "description": "Show sunrise / sunset times"
  }
, "showFivedayForecast":
  { "type": "checkbox"
  , "default": false
  , "description": "Show 5-day forecast"
  }
, "translateCondition":
  { "type": "checkbox"
  , "default": true
  , "description": "Translate condition"
  }
, "useSymbolicIcons":
  { "type": "checkbox"
  , "default": false
  , "description": "Symbolic icons"
  }
, "showTextInPanel":
  { "type": "checkbox"
  , "default": true
  , "description": "Display current temperature in panel"
  }
, "showCommentInPanel":
  { "type": "checkbox"
  , "default": true
  , "description": "Show the weather condition (e.g., \"Windy\", \"Clear\") in the panel"
  }
, "locationLabelOverride":
  { "type": "entry"
  , "default": ""
  , "description": "Override location label"
  }
, "refreshInterval":
  { "type": "scale"
  , "default": 15
  , "min": 1
  , "max": 360
  , "step": 5
  , "description": "Update interval (minutes)"
  }
}
